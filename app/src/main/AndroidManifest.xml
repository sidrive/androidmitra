<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="lawyerku.mitra">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

  <application
      android:name=".base.BaseApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_logo_1"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_logo_1_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".ui.splash.SplashActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".ui.detailperkara.DetailPerkaraActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.profilelawyer.DetailProfileActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.MessageActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.login.LoginActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.register.RegisterActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
      android:name=".ui.ForgotPasswordActivity"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="stateHidden"/>
    <activity
        android:name=".MainActivityCons"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden"/>

    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="@string/google_maps_key"/>
  </application>


</manifest>