<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/tv_perkara"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:textStyle="bold"
    android:text="Nama Perkara"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/Bidang"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Bidang: Hukum Pidana"
    app:layout_constraintTop_toBottomOf="@id/tv_perkara"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/tv_tgl_mulai"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Mulai: 1 Januari 2018"
    app:layout_constraintTop_toBottomOf="@id/Bidang"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
  <TextView
    android:id="@+id/tv_tgl_selesai"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Selesai: 4 Januari 2018"
    app:layout_constraintTop_toBottomOf="@id/tv_tgl_mulai"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />


  <TextView
    android:id="@+id/tv_lawyer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/res_9dp"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:textStyle="bold"
    android:text="Nama Lawyer"
    app:layout_constraintTop_toBottomOf="@id/tv_tgl_selesai"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/tv_keahlian"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Keahlian: Hukum Pidana"
    app:layout_constraintTop_toBottomOf="@id/tv_lawyer"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

  <TextView
    android:id="@+id/tv_level"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Level: Expert"
    app:layout_constraintTop_toBottomOf="@id/tv_keahlian"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
  <TextView
    android:id="@+id/tv_rating"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_9dp"
    android:layout_marginEnd="@dimen/res_9dp"
    android:text="Rating"
    app:layout_constraintTop_toBottomOf="@id/tv_level"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
  <ImageButton
    android:id="@+id/btn_message"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_chat_bubble_outline_black_24dp"
    android:layout_marginTop="@dimen/res_9dp"
    android:background="@drawable/bg_grad1"
    android:padding="@dimen/res_9dp"
    app:layout_constraintTop_toBottomOf="@id/tv_rating"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>